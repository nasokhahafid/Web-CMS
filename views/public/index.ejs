<script>
    let cart = [];

    // Add to cart directly from product card
    function addToCartDirect(productName) {
        const existingIndex = cart.findIndex(item => item.product === productName);
        if (existingIndex > -1) {
            cart[existingIndex].qty += 1;
        } else {
            cart.push({ product: productName, qty: 1 });
        }
        updateFloatingCart();
        showToast(productName + ' ditambahkan ke keranjang!');
    }

    // Add from checkout modal
    function addFromCheckout() {
        const productSelect = document.getElementById('checkout-product');
        const qtyInput = document.getElementById('checkout-qty');
        const product = productSelect.value;
        const qty = parseInt(qtyInput.value) || 1;

        const existingIndex = cart.findIndex(item => item.product === product);
        if (existingIndex > -1) {
            cart[existingIndex].qty += qty;
        } else {
            cart.push({ product, qty });
        }

        qtyInput.value = 1;
        renderCheckoutCart();
        updateFloatingCart();
    }

    function removeFromCart(index) {
        cart.splice(index, 1);
        renderCheckoutCart();
        updateFloatingCart();
    }

    // Update floating cart button
    function updateFloatingCart() {
        const floatingCart = document.getElementById('floating-cart');
        const cartCount = document.getElementById('cart-count');
        const totalItems = cart.reduce((sum, item) => sum + item.qty, 0);

        if (totalItems > 0) {
            floatingCart.classList.remove('hidden');
            cartCount.innerText = totalItems;
        } else {
            floatingCart.classList.add('hidden');
        }
    }

    // Show toast notification
    function showToast(message) {
        const toast = document.getElementById('toast');
        const toastMessage = document.getElementById('toast-message');
        toastMessage.innerText = message;
        
        toast.classList.remove('hidden');
        setTimeout(() => {
            toast.classList.remove('opacity-0', 'translate-y-4');
            toast.classList.add('opacity-100', 'translate-y-0');
        }, 10);
        
        setTimeout(() => {
            toast.classList.add('opacity-0', 'translate-y-4');
            toast.classList.remove('opacity-100', 'translate-y-0');
            setTimeout(() => toast.classList.add('hidden'), 300);
        }, 2000);
    }

    // Open checkout modal
    function openCheckoutModal() {
        renderCheckoutCart();
        document.getElementById('checkout-modal').classList.remove('hidden');
        document.body.style.overflow = 'hidden';
    }

    function closeCheckoutModal() {
        document.getElementById('checkout-modal').classList.add('hidden');
        document.body.style.overflow = 'auto';
    }

    // Render cart in checkout modal
    function renderCheckoutCart() {
        const itemsDiv = document.getElementById('checkout-cart-items');
        const emptyDiv = document.getElementById('checkout-empty');
        const sendBtn = document.getElementById('checkout-send-btn');

        if (cart.length === 0) {
            itemsDiv.innerHTML = '';
            emptyDiv.classList.remove('hidden');
            sendBtn.disabled = true;
            sendBtn.classList.remove('red-gradient', 'text-white', 'hover:scale-[1.02]', 'cursor-pointer');
            sendBtn.classList.add('bg-gray-300', 'text-gray-500', 'cursor-not-allowed');
            sendBtn.querySelector('span').innerText = 'Keranjang Kosong';
            return;
        }

        emptyDiv.classList.add('hidden');
        sendBtn.disabled = false;
        sendBtn.classList.add('red-gradient', 'text-white', 'hover:scale-[1.02]', 'cursor-pointer');
        sendBtn.classList.remove('bg-gray-300', 'text-gray-500', 'cursor-not-allowed');
        sendBtn.querySelector('span').innerText = 'Kirim via WhatsApp';

        itemsDiv.innerHTML = cart.map((item, index) => `
            <div class="flex items-center justify-between bg-white border border-gray-100 rounded-xl px-4 py-3">
                <div class="flex items-center space-x-3">
                    <span class="w-8 h-8 bg-red-100 text-red-600 rounded-full flex items-center justify-center font-bold text-sm">${item.qty}</span>
                    <span class="font-medium text-gray-800 text-sm">${item.product}</span>
                </div>
                <button onclick="removeFromCart(${index})" class="text-red-400 hover:text-red-600"><i class="fas fa-trash-alt text-xs"></i></button>
            </div>
        `).join('');
    }

    function sendToWhatsApp() {
        const name = document.getElementById('checkout-name').value.trim();
        const address = document.getElementById('checkout-address').value.trim();
        const waNumber = "<%= setting.wa_number %>";

        if (!name || !address) {
            alert('Mohon isi Nama dan Alamat terlebih dahulu!');
            return;
        }

        if (cart.length === 0) {
            alert('Keranjang masih kosong!');
            return;
        }

        const orderLines = cart.map(item => `‚Ä¢ ${item.qty}x ${item.product}`).join('%0A');
        const message = `Halo Sambal Bledheg! Saya mau pesan:%0A%0A*Nama:* ${name}%0A*Alamat:* ${address}%0A%0A*Pesanan:*%0A${orderLines}%0A%0AMohon info totalnya ya Min! üôèüî•`;
        
        window.open(`https://wa.me/${waNumber}?text=${message}`, '_blank');
        
        // Reset cart
        cart = [];
        updateFloatingCart();
        renderCheckoutCart();
        closeCheckoutModal();
    }

    // Legacy function for "Pesan Sekarang" button - now opens checkout modal
    function openOrderModal(productName = '') {
        if (productName) {
            addToCartDirect(productName);
        }
        openCheckoutModal();
    }
</script>

