<script>
    // Mobile Menu Toggle
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');
    const links = document.querySelectorAll('.mobile-link');
    const icon = btn.querySelector('i');
    
    // Elements to change on scroll
    const nav = document.getElementById('navbar');
    const logoSuffix = document.getElementById('logo-suffix');
    const desktopMenu = document.getElementById('desktop-menu');

    function toggleMenu() {
        menu.classList.toggle('translate-x-full');
        const isOpen = !menu.classList.contains('translate-x-full');
        
        if (isOpen) {
            icon.classList.remove('fa-bars');
            icon.classList.add('fa-times');
            btn.classList.remove('text-white');
            btn.classList.add('text-gray-900');
        } else {
            icon.classList.remove('fa-times');
            icon.classList.add('fa-bars');
            updateNavbarState(); // Reset button color based on scroll position
        }
    }

    btn.addEventListener('click', toggleMenu);

    links.forEach(link => {
        link.addEventListener('click', toggleMenu);
    });

    // Navbar Scroll & Style Logic
    function updateNavbarState() {
        if (window.scrollY > 50) {
            // Scrolled State (White BG)
            nav.classList.add('bg-white', 'shadow-md');
            nav.classList.remove('border-white/20');
            
            logoSuffix.classList.remove('text-white');
            logoSuffix.classList.add('text-gray-900');
            
            // Desktop Menu Text Color
            desktopMenu.classList.remove('text-white');
            desktopMenu.classList.add('text-gray-800');

            // Mobile Btn Color (Only if menu is closed)
            if (menu.classList.contains('translate-x-full')) {
                btn.classList.remove('text-white');
                btn.classList.add('text-gray-900');
            }
        } else {
            // Top State (Transparent)
            nav.classList.remove('bg-white', 'shadow-md');
            nav.classList.add('border-white/20');
            
            logoSuffix.classList.remove('text-gray-900');
            logoSuffix.classList.add('text-white');
            
            // Desktop Menu Text Color
            desktopMenu.classList.remove('text-gray-800');
            desktopMenu.classList.add('text-white');

            // Mobile Btn Color (Only if menu is closed)
            if (menu.classList.contains('translate-x-full')) {
                btn.classList.remove('text-gray-900');
                btn.classList.add('text-white');
            }
        }
    }

    window.addEventListener('scroll', updateNavbarState);
    
    // Run on load
    updateNavbarState();
</script>
