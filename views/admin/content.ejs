<%- include('../partials/header') %>
<div class="flex min-h-screen bg-gray-50">
    <%- include('../partials/admin_sidebar') %>
    <main class="flex-1 p-10">
        <%- include('../partials/flash') %>
        <h1 class="text-3xl font-bold mb-10">Manajemen Konten Website</h1>

        <div class="space-y-8">
            <% contents.forEach(c => { %>
            <div class="bg-white p-8 rounded-3xl shadow-sm border border-gray-100 uppercase">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-xs font-black tracking-widest text-red-600">SEKSI: <%= c.section_name %></h2>
                </div>
                <form action="/admin/content/update" method="POST" class="space-y-4">
                    <input type="hidden" name="id" value="<%= c.id %>">
                    <div>
                        <label class="block text-xs font-bold text-gray-400 mb-2">JUDUL SEKSI</label>
                        <input type="text" name="title" value="<%= c.title %>" class="w-full px-5 py-3 rounded-xl bg-gray-50 border border-gray-100 focus:border-red-600 outline-none font-bold text-gray-900">
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-gray-400 mb-2">ISI KONTEN</label>
                        <textarea name="content" rows="4" class="w-full px-5 py-3 rounded-xl bg-gray-50 border border-gray-100 focus:border-red-600 outline-none text-gray-600"><%= c.content %></textarea>
                    </div>
                    <button type="submit" class="bg-gray-900 text-white px-6 py-2 rounded-xl text-sm font-bold">Simpan Perubahan</button>
                </form>
            </div>
            <% }) %>
        </div>
    </main>
</div>
<%- include('../partials/footer') %>
