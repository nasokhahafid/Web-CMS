<%- include('../partials/header') %>
<div class="flex min-h-screen bg-gray-50">
    <%- include('../partials/admin_sidebar') %>
    <main class="flex-1 p-10">
        <%- include('../partials/flash') %>
        <div class="flex justify-between items-center mb-10">
            <h1 class="text-3xl font-bold">Manajemen Voucher</h1>
            <button onclick="document.getElementById('addModal').classList.remove('hidden')" class="bg-red-600 text-white px-6 py-3 rounded-2xl font-bold shadow-lg hover:bg-red-700 transition">Buat Voucher <i class="fas fa-plus ml-2"></i></button>
        </div>

        <!-- Voucher List -->
        <div class="bg-white rounded-3xl shadow-sm border border-gray-100 overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
                <thead>
                    <tr class="bg-gray-50 border-b border-gray-100 text-gray-500 uppercase text-xs tracking-wider">
                        <th class="p-6 font-bold text-left">Kode Voucher</th>
                        <th class="p-6 font-bold text-left">Tipe</th>
                        <th class="p-6 font-bold text-left">Potongan</th>
                        <th class="p-6 font-bold text-center">Status</th>
                        <th class="p-6 font-bold text-center">Aksi</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                    <% vouchers.forEach(v => { %>
                    <tr class="hover:bg-gray-50 transition">
                        <td class="p-6 font-mono font-bold text-red-600 border-b border-gray-50"><%= v.code %></td>
                        <td class="p-6 text-gray-600 border-b border-gray-50 uppercase text-sm"><%= v.discount_type %></td>
                        <td class="p-6 font-bold text-gray-900 border-b border-gray-50">
                            <%= v.discount_type === 'percentage' ? v.discount_value + '%' : 'Rp ' + Number(v.discount_value).toLocaleString('id-ID') %>
                        </td>
                        <td class="p-6 text-center border-b border-gray-50">
                            <% if(v.is_active) { %>
                                <span class="px-3 py-1 bg-green-100 text-green-600 rounded-full text-xs font-bold uppercase">Aktif</span>
                            <% } else { %>
                                <span class="px-3 py-1 bg-gray-100 text-gray-400 rounded-full text-xs font-bold uppercase">Non-Aktif</span>
                            <% } %>
                        </td>
                        <td class="p-6 text-center border-b border-gray-50">
                            <a href="/admin/vouchers/delete/<%= v.id %>" onclick="return confirm('Hapus voucher ini?')" class="w-8 h-8 rounded-full bg-red-100 text-red-600 flex items-center justify-center hover:bg-red-600 hover:text-white transition mx-auto" title="Hapus">
                                <i class="fas fa-trash-alt text-xs"></i>
                            </a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Add Modal -->
        <div id="addModal" class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-6">
            <div class="bg-white rounded-[40px] p-10 max-w-lg w-full shadow-2xl">
                <h2 class="text-2xl font-bold mb-6">Buat Voucher Baru</h2>
                <form action="/admin/vouchers/add" method="POST" class="space-y-4">
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Kode Voucher</label>
                        <input type="text" name="code" placeholder="Contoh: PEDAS10" required class="w-full px-5 py-3 rounded-2xl bg-gray-50 border border-gray-100 focus:border-red-600 outline-none uppercase">
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Tipe Diskon</label>
                            <select name="discount_type" class="w-full px-5 py-3 rounded-2xl bg-gray-50 border border-gray-100 focus:border-red-600 outline-none">
                                <option value="percentage">Persentase (%)</option>
                                <option value="fixed">Nominal (Rp)</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Nilai Potongan</label>
                            <input type="number" name="discount_value" placeholder="Contoh: 10 atau 5000" required class="w-full px-5 py-3 rounded-2xl bg-gray-50 border border-gray-100 focus:border-red-600 outline-none">
                        </div>
                    </div>
                    <div class="flex space-x-4 pt-4">
                        <button type="button" onclick="document.getElementById('addModal').classList.add('hidden')" class="flex-1 bg-gray-100 text-gray-600 py-4 rounded-2xl font-bold">Batal</button>
                        <button type="submit" class="flex-1 bg-red-600 text-white py-4 rounded-2xl font-bold shadow-lg hover:bg-red-700 transition">Simpan Voucher</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>
<%- include('../partials/footer') %>
