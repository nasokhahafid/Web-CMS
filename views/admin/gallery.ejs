<%- include('../partials/header') %>
<div class="flex min-h-screen bg-gray-50">
    <%- include('../partials/admin_sidebar') %>
    <main class="flex-1 p-10">
        <div class="flex justify-between items-center mb-10">
            <h1 class="text-3xl font-bold">Manajemen Galeri</h1>
            <button onclick="document.getElementById('addModal').classList.remove('hidden')" class="bg-red-600 text-white px-6 py-3 rounded-2xl font-bold shadow-lg">Tambah Foto <i class="fas fa-plus ml-2"></i></button>
        </div>

        <div class="grid md:grid-cols-4 gap-6">
            <% gallery.forEach(g => { %>
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden group">
                <div class="h-48 overflow-hidden relative">
                    <img src="/uploads/<%= g.image %>" class="w-full h-full object-cover">
                    <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition flex items-center justify-center">
                        <a href="/admin/gallery/delete/<%= g.id %>" onclick="return confirm('Hapus foto ini?')" class="bg-red-600 text-white w-10 h-10 rounded-full flex items-center justify-center"><i class="fas fa-trash"></i></a>
                    </div>
                </div>
                <div class="p-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-center"><%= g.title %></div>
            </div>
            <% }) %>
        </div>

        <div id="addModal" class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-6">
            <div class="bg-white rounded-3xl w-full max-w-md p-10 shadow-2xl relative">
                <button onclick="document.getElementById('addModal').classList.add('hidden')" class="absolute top-6 right-6 text-gray-400 hover:text-gray-900"><i class="fas fa-times text-xl"></i></button>
                <h2 class="text-2xl font-bold mb-6">Tambah Foto Galeri</h2>
                <form action="/admin/gallery/add" method="POST" enctype="multipart/form-data" class="space-y-4">
                    <input type="text" name="title" placeholder="Judul Foto" class="w-full px-5 py-3 rounded-xl bg-gray-50 border border-transparent focus:border-red-600 outline-none">
                    <input type="file" name="image" required class="w-full text-sm">
                    <button type="submit" class="w-full red-gradient text-white py-4 rounded-xl font-bold shadow-xl">Simpan</button>
                </form>
            </div>
        </div>
    </main>
</div>
<%- include('../partials/footer') %>
