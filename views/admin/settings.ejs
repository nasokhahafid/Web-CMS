<%- include('../partials/header') %>
<div class="flex min-h-screen bg-gray-50">
    <%- include('../partials/admin_sidebar') %>
    <main class="flex-1 p-10">
        <%- include('../partials/flash') %>
        <h1 class="text-3xl font-bold mb-10">Pengaturan Website</h1>

        <div class="max-w-2xl bg-white p-10 rounded-3xl shadow-sm border border-gray-100">
            <h2 class="text-xl font-bold mb-8 flex items-center"><i class="fas fa-tools mr-3 text-red-600"></i> Konfigurasi Dasar</h2>
            <form action="/admin/settings/update" method="POST" class="space-y-6">
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Nomor WhatsApp (Gunakan 62...)</label>
                    <input type="text" name="wa_number" value="<%= setting.wa_number %>" placeholder="Contoh: 62812345678" class="w-full px-5 py-4 rounded-2xl bg-gray-50 border border-gray-100 focus:border-red-600 outline-none text-gray-900 font-medium">
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Username Instagram</label>
                    <input type="text" name="instagram" value="<%= setting.instagram %>" placeholder="Contoh: @sambalbledheg321" class="w-full px-5 py-4 rounded-2xl bg-gray-50 border border-gray-100 focus:border-red-600 outline-none">
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Alamat Lengkap</label>
                    <textarea name="address" rows="3" class="w-full px-5 py-4 rounded-2xl bg-gray-50 border border-gray-100 focus:border-red-600 outline-none"><%= setting.address %></textarea>
                </div>

                <div class="border-t border-gray-100 pt-6">
                    <h3 class="text-lg font-bold mb-4 flex items-center"><i class="fas fa-chart-line mr-3 text-blue-600"></i> Tracking & SEO</h3>
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Google Analytics ID (G-XXXXXXXXXX)</label>
                            <input type="text" name="google_analytics_id" value="<%= setting.google_analytics_id || '' %>" placeholder="G-XXXXXXXXXX" class="w-full px-5 py-4 rounded-2xl bg-gray-50 border border-gray-100 focus:border-blue-600 outline-none">
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Facebook Pixel ID</label>
                            <input type="text" name="facebook_pixel_id" value="<%= setting.facebook_pixel_id || '' %>" placeholder="xxxxxxxxxxxxxxx" class="w-full px-5 py-4 rounded-2xl bg-gray-50 border border-gray-100 focus:border-blue-600 outline-none">
                        </div>
                    </div>
                </div>

                <button type="submit" class="w-full red-gradient text-white py-4 rounded-2xl font-bold shadow-xl hover:brightness-110 transition uppercase tracking-widest text-sm mt-8">Update Pengaturan</button>
            </form>
            
            <form action="/admin/settings/password" method="POST" class="mt-8 pt-8 border-t border-gray-200">
                <h3 class="text-lg font-bold mb-4 flex items-center text-red-600"><i class="fas fa-lock mr-3"></i> Ganti Password</h3>
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-2">Password Lama</label>
                        <input type="password" name="current_password" required class="w-full px-5 py-4 rounded-2xl bg-gray-50 border border-gray-100 focus:border-red-600 outline-none">
                    </div>
                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-2">Password Baru</label>
                        <input type="password" name="new_password" required class="w-full px-5 py-4 rounded-2xl bg-gray-50 border border-gray-100 focus:border-red-600 outline-none">
                    </div>
                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-2">Konfirmasi Password Baru</label>
                        <input type="password" name="confirm_password" required class="w-full px-5 py-4 rounded-2xl bg-gray-50 border border-gray-100 focus:border-red-600 outline-none">
                    </div>
                    <button type="submit" class="w-full bg-gray-900 text-white py-4 rounded-2xl font-bold shadow-lg hover:bg-black transition">Ubah Password</button>
                </div>
            </form>
    </main>
</div>
<%- include('../partials/footer') %>
