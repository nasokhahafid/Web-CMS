<%- include('../partials/header') %>
<div class="flex min-h-screen bg-gray-50">
    <%- include('../partials/admin_sidebar') %>
    <main class="flex-1 p-10">
        <h1 class="text-3xl font-bold mb-10">Pengaturan Website</h1>

        <div class="max-w-2xl bg-white p-10 rounded-3xl shadow-sm border border-gray-100">
            <h2 class="text-xl font-bold mb-8 flex items-center"><i class="fas fa-tools mr-3 text-red-600"></i> Konfigurasi Dasar</h2>
            <form action="/admin/settings/update" method="POST" class="space-y-6">
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Nomor WhatsApp (Gunakan 62...)</label>
                    <input type="text" name="wa_number" value="<%= setting.wa_number %>" placeholder="Contoh: 62812345678" class="w-full px-5 py-4 rounded-2xl bg-gray-50 border border-gray-100 focus:border-red-600 outline-none text-gray-900 font-medium">
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Username Instagram</label>
                    <input type="text" name="instagram" value="<%= setting.instagram %>" placeholder="Contoh: @sambalbledheg321" class="w-full px-5 py-4 rounded-2xl bg-gray-50 border border-gray-100 focus:border-red-600 outline-none">
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Alamat Lengkap</label>
                    <textarea name="address" rows="3" class="w-full px-5 py-4 rounded-2xl bg-gray-50 border border-gray-100 focus:border-red-600 outline-none"><%= setting.address %></textarea>
                </div>
                <button type="submit" class="w-full red-gradient text-white py-4 rounded-2xl font-bold shadow-xl hover:brightness-110 transition uppercase tracking-widest text-sm">Update Pengaturan</button>
            </form>
        </div>
    </main>
</div>
<%- include('../partials/footer') %>
