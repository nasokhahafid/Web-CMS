<% if (success && success.length > 0) { %>
    <div class="mb-8 p-4 bg-green-100 border-l-4 border-green-500 text-green-700 font-bold rounded shadow-sm flex justify-between items-center" id="flash-success">
        <div class="flex items-center">
            <i class="fas fa-check-circle mr-2"></i>
            <span><%= success %></span>
        </div>
        <button onclick="document.getElementById('flash-success').remove()" class="text-green-700 hover:text-green-900"><i class="fas fa-times"></i></button>
    </div>
<% } %>

<% if (error && error.length > 0) { %>
    <div class="mb-8 p-4 bg-red-100 border-l-4 border-red-500 text-red-700 font-bold rounded shadow-sm flex justify-between items-center" id="flash-error">
        <div class="flex items-center">
            <i class="fas fa-exclamation-circle mr-2"></i>
            <span><%= error %></span>
        </div>
        <button onclick="document.getElementById('flash-error').remove()" class="text-red-700 hover:text-red-900"><i class="fas fa-times"></i></button>
    </div>
<% } %>

<script>
    // Auto hide after 5 seconds
    setTimeout(() => {
        const s = document.getElementById('flash-success');
        const e = document.getElementById('flash-error');
        if(s) { s.style.transition = "opacity 1s"; s.style.opacity = 0; setTimeout(() => s.remove(), 1000); }
        if(e) { e.style.transition = "opacity 1s"; e.style.opacity = 0; setTimeout(() => e.remove(), 1000); }
    }, 5000);
</script>
